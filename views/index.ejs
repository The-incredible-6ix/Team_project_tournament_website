<body class="">
<div class="wrapper ">
    <div class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
        <div class="logo">
            <a href="#" class="simple-text logo-normal">
                The Incredible 6ix
            </a>
            <img src="/public/images/teamLogo.png" alt="">
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item <% if(column==='myTournament'){ %>
                    active
                <% } %>  ">
                    <a class="nav-link" href="/matches">
                        <i class="fas fa-football-ball"></i>
                        <p>Start my tournament</p>
                    </a>
                </li>
                <li class="nav-item <% if(column==='tournamentList'){ %>
                    active
                <% } %>  ">
                    <a class="nav-link" href="#">
                        <i class="fas fa-tasks"></i>
                        <p>My tournament list</p>
                    </a>
                </li>

                <li class="nav-item active-pro ">
                    <a class="nav-link" href="javascript:void(0)">
                        <i class="fas fa-dice-six"></i>
                        <p>The Incredible 6ix</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <a class="" href="javascript:;"><% if(column==='myTournament'){ %>
                            Start my tournament
                        <% }else if(column==='tournamentList'){ %>
                            My tournament list
                        <% } %></a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">person</i>
                                <p class="d-lg-none d-md-block">
                                    Account
                                </p>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                
                                <% if (typeof displayName == 'string' && displayName) {%> 
                                    <p class="dropdown-item">Welcome, <%= displayName %></p>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Profile</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="/logout" class="dropdown-item" href="#">Log out</a>
                                <% } else { %> 
                                    <a href="/login" class="dropdown-item" >Tournament Owner? <br><br> Log in</a>
                                <% } %>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title ">Tournament management</h4>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                    Create a tournament
                                </button>
                                <!-- Modal -->
                                <div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="addTitle">Add a tournament</h5>
                                            </div>
                                            <div class="modal-body">
                                                    <div class="form-group">
                                                        <label for="mName">Tournament name</label>
                                                        <input name="mName" type="text" class="form-control" id="mName" aria-describedby="emailHelp">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="mNumber">Number of players</label>
                                                        <input name="mNumber" type="number" class="form-control" id="mNumber">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="mPlayers">Players</label>
                                                        <input name="mPlayers" type="text" class="form-control" id="mPlayers">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="mActiveTime">Start time</label>
                                                        <input name="mActiveTime" type="date" class="form-control" id="mActiveTime">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="mWinner">Winner</label>
                                                        <input name="mWinner" type="text" class="form-control" id="mWinner">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="mDescription">Description</label>
                                                        <textarea name="mDescription" type="text" class="form-control" id="mDescription"></textarea>
                                                    </div>


                                                    <button class="btn btn-primary" id="addBtn">Submit</button>
                                                    <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Tournament Name
                                        </th>
                                        <th>
                                            Number of players
                                        </th>
                                        <th>
                                            Players
                                        </th>
                                        <th>
                                            Start time
                                        </th>
                                        <th>
                                            Winner
                                        </th>
                                        <th>
                                            Operation
                                        </th>
                                        </thead>
                                        <tbody>
                                        <% for(let i =0; i < matches.length; i++){ %>
                                        <tr>

                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <%= matches[i].mName %>
                                            </td>
                                            <td>
                                                <%= matches[i].mNumber %>
                                            </td>
                                            <td>
                                                <%= matches[i].mPlayers %>
                                            </td>
                                            <td>
                                                <%= matches[i].mActiveTime %>
                                            </td>
                                            <td class="text-primary">
                                                <%= matches[i].mWinner %>
                                            </td>
                                            <td>
                                                <a href="/matches/modifyTournament/<%= matches[i]._id %>" class="btn btn-secondary btn-sm">Modify</a>
                                                <a href="/matches/deleteTournament/<%= matches[i]._id %>"  class="btn btn-danger btn-sm">Delete</a>
                                            </td>

                                        </tr>

                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <nav class="float-left">
                    <ul>
                        <li>
                            <a href="#">
                                About Us
                            </a>
                        </li>

                    </ul>
                </nav>
                <div class="copyright float-right">
                    &copy; The incredible 6ix
                    <script>
                        document.write(new Date().getFullYear())
                    </script>
                    <i class="material-icons">favorite</i>
                </div>
            </div>
        </footer>
    </div>
</div>
