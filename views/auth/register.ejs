<% if(messages.length > 0) {%>
    <div class="alert alert-danger">
        <%= messages %> 
    </div>

<% } %>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 formCenter">
        <!--show register form-->
        <img src="/public/images/teamLogo.png" alt="" class="displayLogo">
        <span class="slogan">Welcome to TournaSmart</span>
        <h2 style="font-weight: bolder;">Register</h2>
        <form method="POST" autocomplete="off">
            <fieldset class="form-group">
                <label for="username" style="color: black;">Email Address:</label>
                <input name="username" type="email" class="form-control" 
                id="username" required>
            </fieldset>

            <fieldset class="form-group">
                <label for="password" style="color: black;">Password</label>
                <input name="password" type="password" class="form-control" 
                id="password" required>
            </fieldset>

            <fieldset class="form-group">
                <label for="password" style="color: black;">Password Confirm</label>
                <input name="passwordConfirm" type="password" class="form-control" 
                id="passwordConfirm" required oninput="check(this)">
            </fieldset>

            <fieldset class="form-group">
                <label for="displayName" style="color: black;">Display Name:</label>
                <input name="displayName" type="text" class="form-control" 
                id="displayName" required autofocus>
            </fieldset>

            <p>Already have an account? <a href="/login" style="color: navy;">Login now</a></p>

            <fieldset class="form-group text-right">
                <input type="submit" class="btn btn-success" value="Register">
                <a href="/matches">
                    <input type="button" class="btn btn-warning" value="Cancel">
                </a>
            </fieldset>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

