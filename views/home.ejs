<body class="">
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" >
        <!--show login form-->
        <% if(show==='login') { %>
            <img src="/public/images/teamLogo.png" alt=""><p>Welcome to incredible tournament website</p>
            <h2>Login</h2>
            <div class="form-group">
                <label for="email">Email address</label>
                <input name="uEmail" type="email" class="form-control" id="uEmail" placeholder="Please enter your email">
            </div>
            <div class="form-group">
                <label for="uPassword">Password</label>
                <input name="uPassword" type="password" class="form-control" id="uPassword" placeholder="Please enter your password">
            </div>
            <p>No account yet? <a href="/users/register">Register now</a></p>
            <button type="submit" class="btn btn-success" id="loginBtn">Login</button>
        <% } %>

        <!--show register form-->
        <% if(show==='register') { %>
                <img src="/public/images/teamLogo.png" alt=""><p>Welcome to incredible tournament website</p>
                <h2>Login</h2>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input name="uEmail" type="email" class="form-control" id="uEmail" placeholder="Please enter your email">
                </div>
                <div class="form-group">
                    <label for="uPassword">Password</label>
                    <input name="uPassword" type="password" class="form-control" id="uPassword" placeholder="Please enter your password">
                </div>
                <div class="form-group">
                    <label for="uPassword">Password Confirm</label>
                    <input name="uPasswordConfirm" type="password" class="form-control" id="uPasswordConfirm" placeholder="Please enter your password again">
                </div>
                <p>Already have an account? <a href="/users/login">Login now</a></p>
                <button type="submit" class="btn btn-success" id="loginBtn">Register</button>
        <% } %>

    </div>
    <div class="col-md-4"></div>
</div>

